version: '3.8'

services:
  rabbitmq:
    image: rabbitmq:3-management-alpine
    ports:
      - "5672:5672"
      - "15672:15672"
    environment:
      RABBITMQ_DEFAULT_USER: guest
      RABBITMQ_DEFAULT_PASS: guest

  redis:
    image: redis:alpine
    ports:
      - "6379:6379"

  app:
    image: node:18-alpine
    working_dir: /app
    ports:
      - "3000:3000"
      - "8080:8080"
    volumes:
      - .:/app
    command: sh -c "npm install && npm start"
    environment:
      - RABBITMQ_URL=amqp://rabbitmq:5672
      - REDIS_URL=redis://redis:6379
    depends_on:
      - rabbitmq
      - redis



